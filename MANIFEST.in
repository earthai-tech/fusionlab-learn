# MANIFEST.in for fusionlab project

# --- Root files ---
include LICENSE
include README.md
include pyproject.toml
include setup.py
include MANIFEST.in

# --- Static assets for PyPI README rendering ---
recursive-include docs/source/_static *
include docs/source/images/readme_*.png

# --- Documentation sources (hand-written RST, exclude autosummary stubs) ---
recursive-include docs/source *.rst
recursive-include docs/source *.py
recursive-include docs/source/_templates *
# Exclude autogenerated autosummary files
recursive-exclude docs/source/_autosummary *

# --- Include docs build scripts and requirements ---
include docs/Makefile
include docs/make.bat
include docs/requirements.txt

# --- Package data ---
include fusionlab/datasets/data/*

# --- Console scripts entry-points file, if needed ---
# (setup.py / pyproject.toml define scripts)

# --- Exclusions: remove pinn_works and tests from sdist ---
# Exclude the experimental _pinn_works folder entirely
recursive-exclude results *
recursive-exclude results_pinn *
recursive-exclude _pinn_works *
# Exclude tests/ to keep sdist lean
# Exclude tests/ to keep sdist lean
recursive-exclude tests *  # exclude top-level tests
recursive-exclude fusionlab/tests *  # exclude package tests
# Exclude any test directories at any depth
recursive-exclude */tests *
# Exclude any pytest-style test files anywhere
global-exclude test_*.py


# --- Global excludes ---
global-exclude *.py[cod] __pycache__/* *.so *.dylib *.o *.a *.dll *.lib
exclude .coverage coverage.xml .pytest_cache
exclude .gitignore .gitattributes
recursive-exclude .github *
recursive-exclude venv *
recursive-exclude .venv *

# --- Prune build artifacts ---
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *
recursive-exclude docs/_build *

# --- Prune empty directories ---
prune docs/_build
# prune tests/__pycache__ # Example